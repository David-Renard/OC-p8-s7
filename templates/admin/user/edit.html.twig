{% extends 'base_admin.html.twig' %}

{% block title %}Modifier le rôle{% endblock %}

{% block body %}
    <div class="container text-center">
        <h1 class="h5">Modifier le rôle de l'utilisateur : {{ user.username }}</h1>
        <h2 class="h6">Rôle(s) actuel(s) : 'ROLE_USER' {{ ('ROLE_ADMIN' in user.roles) ? "et 'ROLE_ADMIN'": '' }}</h2>
        {{ form_errors(form) }}
        {{ form_start(form) }}
        <div class="my-3 col-8 offset-2 d-flex flex-column justify-content-around">
            {{ form_row(form.roles) }}
        </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
